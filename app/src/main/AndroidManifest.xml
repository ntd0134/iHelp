<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ihelp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IHelp">
        <activity android:name=".ui.profile_guest.ProfileGuestActivity"></activity>
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.event_create.CreateEventActivity" />
        <activity android:name=".ui.profile.ProfileActivity" />
        <activity android:name=".ui.event_detail.EventDetailActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>