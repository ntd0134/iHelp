<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.event_detail.EventDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activity_event_detail_btn_back"
                android:layout_width="@dimen/ic_size_clickable"
                android:layout_height="@dimen/ic_size_clickable"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/btn_ripple_effect"
                android:clickable="true"
                android:padding="@dimen/ic_padding_clickable"
                android:src="@drawable/ic_left_arrow" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/logo_size"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_logo3_minimized" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_primary"
                android:paddingBottom="50dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/img_default_height"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_default_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/component_horizontal_default_space"
                    android:layout_marginTop="120dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_surround_gray"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/activity_event_detail_txt_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="string_title"
                            android:textColor="@color/txt_primary"
                            android:textSize="@dimen/txt_size_big" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="@dimen/ic_size"
                                    android:layout_height="@dimen/ic_size"
                                    android:src="@drawable/ic_check_box" />

                                <TextView
                                    android:id="@+id/activity_event_detail_txt_participant"
                                    style="@style/txt_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:text="integer" />
                                <TextView
                                    style="@style/txt_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:text=" participants" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true">

                                <TextView
                                    android:id="@+id/activity_event_detail_txt_spot"
                                    style="@style/txt_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="integer" />
                                <TextView
                                    style="@style/txt_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=" spots left" />
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_surround_gray"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_under_line"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_default_profile_avatar" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/txt_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Organizer"
                                    android:textSize="@dimen/txt_size_big" />

                                <TextView
                                    android:id="@+id/activity_event_detail_txt_author_name"
                                    style="@style/txt_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="string_author_email" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:layout_width="@dimen/ic_size"
                                android:layout_height="@dimen/ic_size"
                                android:src="@drawable/ic_point" />

                            <TextView
                                android:id="@+id/activity_event_detail_txt_point"
                                style="@style/txt_light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"
                                android:text="integer" />
                            <TextView
                                style="@style/txt_light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text=" points" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/activity_event_detail_txt_description"
                                style="@style/txt_light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="string_description" />
                        </LinearLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_under_line_background_primary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp">
                            <TextView
                                style="@style/txt_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Participants"
                                android:textSize="@dimen/txt_size_big" />
                        </LinearLayout>
                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/border_under_line_layer"/>
                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/activity_event_detail_rclr_participants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

<!--                    <LinearLayout-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:padding="10dp">-->
<!--                        <ImageView-->
<!--                            android:src="@drawable/img_profile_test"-->
<!--                            android:layout_width="@dimen/ic_profile_size"-->
<!--                            android:layout_height="@dimen/ic_profile_size"-->
<!--                            android:layout_marginRight="5dp"/>-->
<!--                        <ImageView-->
<!--                            android:src="@drawable/img_profile_test"-->
<!--                            android:layout_width="@dimen/ic_profile_size"-->
<!--                            android:layout_height="@dimen/ic_profile_size"-->
<!--                            android:layout_marginRight="5dp"/>-->
<!--                        <ImageView-->
<!--                            android:src="@drawable/img_profile_test"-->
<!--                            android:layout_width="@dimen/ic_profile_size"-->
<!--                            android:layout_height="@dimen/ic_profile_size"-->
<!--                            android:layout_marginRight="5dp"/>-->
<!--                    </LinearLayout>-->

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_under_line_background_primary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp">
                            <TextView
                                style="@style/txt_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Category"
                                android:textSize="@dimen/txt_size_big" />
                        </LinearLayout>
                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/border_under_line_layer"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_surround_gray_less_radius"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="20dp"
                            android:layout_marginRight="5dp">
                            <TextView
                                android:id="@+id/activity_event_detail_txt_category"
                                android:text="string_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/txt_normal"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:background="@drawable/border_surround_gray">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/ic_list"
                                    android:layout_width="@dimen/ic_size"
                                    android:layout_height="@dimen/ic_size"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/activity_event_detail_txt_event_type"
                                        android:text="string_event_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="20sp"
                                        style="@style/txt_bold"/>
                                    <TextView
                                        android:text=" Event"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="20sp"
                                        style="@style/txt_bold"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp">
                                    <TextView
                                        android:text="Start: "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/txt_bold"/>
                                    <TextView
                                        android:id="@+id/activity_event_detail_txt_start_date"
                                        android:text="string_start_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/txt_light"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp">
                                    <TextView
                                        android:text="End: "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/txt_bold"/>
                                    <TextView
                                        android:id="@+id/activity_event_detail_txt_end_date"
                                        android:text="string_end_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/txt_light"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/ic_location"
                                    android:layout_width="@dimen/ic_size"
                                    android:layout_height="@dimen/ic_size"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">
                                <TextView
                                    android:text="Location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    style="@style/txt_bold"/>
                                <TextView
                                    android:id="@+id/activity_event_detail_txt_location"
                                    android:text="string_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    style="@style/txt_light"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>
        </ScrollView>

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_event_detail_btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_menu"
        android:layout_marginRight="20dp"
        app:maxImageSize="20dp"
        app:tint="@color/primary"
        android:backgroundTint="@color/white"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>